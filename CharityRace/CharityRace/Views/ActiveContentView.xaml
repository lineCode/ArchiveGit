<UserControl x:Class="CharityRace.ActiveContentView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
	<Grid>
		<Grid>
			<Border x:Name="x_WelcomeRegion" Visibility="{Binding IsWelcomeViewActive, Converter={StaticResource ValueIsNotNullFalseZeroEmpty}}" />
			<Border x:Name="x_RiderRegion" Visibility="{Binding IsRiderViewActive, Converter={StaticResource ValueIsNotNullFalseZeroEmpty}}" />
			<Border x:Name="x_DonorRegion" Visibility="{Binding IsDonorViewActive, Converter={StaticResource ValueIsNotNullFalseZeroEmpty}}" />
			<Border x:Name="x_DonationRegion" Visibility="{Binding IsDonationViewActive, Converter={StaticResource ValueIsNotNullFalseZeroEmpty}}" />
			<Border x:Name="x_AboutRegion" Visibility="{Binding IsAboutViewActive, Converter={StaticResource ValueIsNotNullFalseZeroEmpty}}" />
		</Grid>
	</Grid>
</UserControl>
