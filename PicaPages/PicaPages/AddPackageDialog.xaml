<UserControl
	x:Class="PicaPages.AddPackageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  
>
	<Border BorderBrush="#FF5B5B5B" BorderThickness="2" Background="#FF2D2D2D" CornerRadius="15">
			<StackPanel Margin="8">
			<TextBlock x:Name="x_Title" Margin="8" TextWrapping="NoWrap" FontSize="12" FontWeight="Bold" Text="(Title)" FontFamily="Verdana" Foreground="#FFF4B42C" />
			<my:DatePicker x:Name="StartDate" IsTodayHighlighted="True" />
			<my:DatePicker x:Name="EndDate" IsTodayHighlighted="True" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
				<Button x:Name="x_OK" Margin="8" Content="OK" Click="OkButton_Click" Width="100" Height="32" />
				<Button x:Name="x_Cancel" Margin="8" Content="Cancel" Click="CancelButton_Click" Width="100" Height="32" />
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>
